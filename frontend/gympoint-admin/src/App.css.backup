/* Theme Colors from GymPoint Mobile */
:root {
  --bg: #FAFAFA;
  --card: #FFFFFF;
  --text: #1A1A1A;
  --subtext: #1A1A1A;
  --primary: #4F9CF9;
  --primary-text: #FFFFFF;
  --border: #DDDDDD;
  --input-bg: #FFFFFF;
  --input-border: #DDDDDD;
  --success: #4CAF50;
  --warning: #FF9800;
  --danger: #F44336;
  --muted: #E0E0E0;
  --text-muted: #9E9E9E;
}

* {
  box-sizing: border-box;
}

body {
  background: var(--bg);
  color: var(--text);
}

/* Layout */
.layout {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--bg);
}

/* Navbar */
.navbar {
  background: var(--card);
  padding: 1rem 2rem;
  border-bottom: 2px solid var(--border);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.navbar-container {
  max-width: 1400px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 2rem;
}

.navbar-brand h1 {
  margin: 0;
  color: var(--primary);
  font-size: 1.5rem;
  font-weight: 700;
}

.navbar-center {
  display: flex;
  gap: 2rem;
  align-items: center;
  flex: 1;
  justify-content: center;
}

.navbar-center a {
  color: var(--text);
  text-decoration: none;
  transition: color 0.3s;
  font-weight: 500;
  padding: 0.5rem 1rem;
  border-radius: 6px;
}

.navbar-center a:hover {
  color: var(--primary);
  background: rgba(79, 156, 249, 0.1);
}

.navbar-profile {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.admin-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.admin-name {
  font-weight: 600;
  color: var(--text);
  font-size: 0.9rem;
}

.admin-role {
  font-size: 0.75rem;
  color: var(--text-muted);
}

.logout-btn {
  background: var(--danger);
  color: white;
  border: none;
  padding: 0.5rem 1.25rem;
  border-radius: 6px;
  cursor: pointer;
  transition: opacity 0.3s;
  font-weight: 500;
}

.logout-btn:hover {
  opacity: 0.85;
}

.main-content {
  flex: 1;
  max-width: 1400px;
  width: 100%;
  margin: 0 auto;
  padding: 2rem;
}

/* Cards */
.card {
  background: var(--card);
  border-radius: 14px;
  padding: 1.5rem;
  margin-bottom: 1.5rem;
  border: 1px solid var(--border);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.card-title {
  margin-top: 0;
  margin-bottom: 1rem;
  color: var(--text);
  font-weight: 600;
}

/* Dashboard */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.stat-value {
  font-size: 2.5rem;
  font-weight: bold;
  color: var(--primary);
  margin-top: 0.5rem;
}

.dashboard-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 1.5rem;
}

.activity-list,
.subscription-list,
.roles-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.activity-list li,
.subscription-list li {
  padding: 0.75rem 0;
  border-bottom: 1px solid var(--border);
  color: var(--subtext);
}

.activity-list li:last-child,
.subscription-list li:last-child {
  border-bottom: none;
}

/* Subscription Stats */
.subscription-stats {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.subscription-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
  background: var(--bg);
  border-radius: 10px;
  transition: transform 0.2s;
}

.subscription-item:hover {
  transform: translateX(5px);
}

.subscription-label {
  font-weight: 500;
  color: var(--text);
}

.subscription-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-muted);
}

.subscription-value.premium {
  color: var(--primary);
}

/* Roles List */
.roles-list li {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem 0;
  border-bottom: 1px solid var(--border);
}

.roles-list li:last-child {
  border-bottom: none;
}

.role-name {
  font-weight: 500;
  color: var(--text);
}

.role-count {
  font-weight: 600;
  color: var(--primary);
  background: rgba(79, 156, 249, 0.1);
  padding: 0.25rem 0.75rem;
  border-radius: 6px;
}

/* Tables */
.table-container {
  overflow-x: auto;
}

table {
  width: 100%;
  border-collapse: collapse;
}

th,
td {
  padding: 1rem 0.75rem;
  text-align: left;
  border-bottom: 1px solid var(--border);
}

th {
  color: var(--text);
  font-weight: 600;
  background: var(--bg);
}

td {
  color: var(--subtext);
}

/* Filters */
.filters {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  align-items: center;
}

.search-input,
.filter-select,
.date-input {
  padding: 0.75rem 1rem;
  border: 1px solid var(--input-border);
  border-radius: 10px;
  background: var(--input-bg);
  color: var(--text);
  font-size: 1rem;
  flex: 1;
  min-width: 200px;
}

.search-input:focus,
.filter-select:focus,
.date-input:focus {
  outline: none;
  border-color: var(--primary);
}

/* View Toggle */
.view-toggle {
  display: flex;
  gap: 0.5rem;
  background: var(--bg);
  border-radius: 10px;
  padding: 0.25rem;
}

.view-btn {
  padding: 0.5rem 1rem;
  border: none;
  background: transparent;
  color: var(--text);
  cursor: pointer;
  border-radius: 8px;
  transition: all 0.3s;
  font-weight: 500;
}

.view-btn.active {
  background: var(--primary);
  color: var(--primary-text);
}

.view-btn:hover:not(.active) {
  background: rgba(79, 156, 249, 0.1);
}

/* User Grid */
.users-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 1.5rem;
  margin-bottom: 1.5rem;
}

/* User Card */
.user-card {
  background: var(--card);
  border-radius: 14px;
  border: 1px solid var(--border);
  padding: 1.5rem;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  transition: transform 0.3s, box-shadow 0.3s;
}

.user-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.user-card-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border);
}

.user-avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: var(--primary);
  color: var(--primary-text);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 1.1rem;
}

.user-info {
  flex: 1;
}

.user-name {
  margin: 0;
  font-size: 1.1rem;
  color: var(--text);
  font-weight: 600;
}

.user-email {
  margin: 0.25rem 0 0 0;
  font-size: 0.85rem;
  color: var(--text-muted);
}

.status-badge {
  padding: 0.35rem 0.75rem;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
}

.status-badge.active {
  background: rgba(76, 175, 80, 0.15);
  color: var(--success);
}

.status-badge.inactive {
  background: rgba(244, 67, 54, 0.15);
  color: var(--danger);
}

.user-card-body {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
  margin-bottom: 1rem;
}

.user-stat {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.stat-label {
  font-size: 0.75rem;
  color: var(--text-muted);
  text-transform: uppercase;
  font-weight: 500;
}

.stat-value {
  font-size: 0.95rem;
  color: var(--text);
  font-weight: 500;
}

.subscription-badge {
  padding: 0.25rem 0.65rem;
  border-radius: 6px;
  font-size: 0.8rem;
  font-weight: 600;
  display: inline-block;
}

.subscription-badge.free {
  background: var(--muted);
  color: var(--text);
}

.subscription-badge.premium {
  background: rgba(79, 156, 249, 0.15);
  color: var(--primary);
}

.user-card-actions {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

/* Badges */
.badge {
  padding: 0.35rem 0.85rem;
  border-radius: 6px;
  font-size: 0.85rem;
  font-weight: 600;
}

.badge.free {
  background: var(--muted);
  color: var(--text);
}

.badge.premium {
  background: rgba(79, 156, 249, 0.15);
  color: var(--primary);
}

.status {
  padding: 0.35rem 0.85rem;
  border-radius: 6px;
  font-size: 0.85rem;
  font-weight: 600;
}

.status.active {
  background: rgba(76, 175, 80, 0.15);
  color: var(--success);
}

.status.inactive {
  background: rgba(244, 67, 54, 0.15);
  color: var(--danger);
}

/* Buttons */
.btn-primary,
.btn-secondary,
.btn-success,
.btn-danger,
.btn-primary-sm,
.btn-secondary-sm,
.btn-success-sm,
.btn-danger-sm {
  border: none;
  border-radius: 10px;
  cursor: pointer;
  font-size: 0.9rem;
  transition: opacity 0.3s;
  font-weight: 500;
}

.btn-primary,
.btn-secondary,
.btn-success,
.btn-danger {
  padding: 0.65rem 1.25rem;
}

.btn-primary-sm,
.btn-secondary-sm,
.btn-success-sm,
.btn-danger-sm {
  padding: 0.5rem 0.85rem;
  font-size: 0.8rem;
}

.btn-primary,
.btn-primary-sm {
  background: var(--primary);
  color: var(--primary-text);
}

.btn-secondary,
.btn-secondary-sm {
  background: var(--muted);
  color: var(--text);
}

.btn-success,
.btn-success-sm {
  background: var(--success);
  color: white;
}

.btn-danger,
.btn-danger-sm {
  background: var(--danger);
  color: white;
}

.btn-primary:hover,
.btn-secondary:hover,
.btn-success:hover,
.btn-danger:hover,
.btn-primary-sm:hover,
.btn-secondary-sm:hover,
.btn-success-sm:hover,
.btn-danger-sm:hover {
  opacity: 0.85;
}

.action-buttons {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

/* Pagination */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1rem;
  margin-top: 1.5rem;
  padding: 1rem;
}

.btn-pagination {
  padding: 0.65rem 1.25rem;
  background: var(--primary);
  color: var(--primary-text);
  border: none;
  border-radius: 10px;
  cursor: pointer;
  font-weight: 500;
  transition: opacity 0.3s;
}

.btn-pagination:disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.btn-pagination:hover:not(:disabled) {
  opacity: 0.85;
}

.pagination span {
  color: var(--text);
  font-weight: 500;
}

/* Delta colors */
.delta.positive {
  color: var(--success);
}

.delta.negative {
  color: var(--danger);
}

/* Loading */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
}

.spinner {
  border: 4px solid var(--border);
  border-top: 4px solid var(--primary);
  border-radius: 50%;
  width: 50px;
  height: 50px;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Login */
.login-page {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: var(--bg);
}

.login-container {
  background: var(--card);
  padding: 3rem;
  border-radius: 14px;
  border: 1px solid var(--border);
  width: 100%;
  max-width: 420px;
  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
}

.login-container h1 {
  color: var(--primary);
  text-align: center;
  margin-bottom: 2rem;
  font-weight: 700;
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-group label {
  color: var(--text);
  font-weight: 500;
  font-size: 0.9rem;
}

.form-group input {
  padding: 0.85rem 1rem;
  border: 1px solid var(--input-border);
  border-radius: 10px;
  background: var(--input-bg);
  color: var(--text);
  font-size: 1rem;
}

.form-group input:focus {
  outline: none;
  border-color: var(--primary);
}

.btn-login {
  padding: 0.85rem;
  background: var(--primary);
  color: var(--primary-text);
  border: none;
  border-radius: 10px;
  font-size: 1rem;
  cursor: pointer;
  transition: opacity 0.3s;
  font-weight: 600;
}

.btn-login:hover:not(:disabled) {
  opacity: 0.85;
}

.btn-login:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.error-message {
  background: rgba(244, 67, 54, 0.15);
  color: var(--danger);
  padding: 0.85rem;
  border-radius: 10px;
  text-align: center;
  border: 1px solid rgba(244, 67, 54, 0.3);
  font-size: 0.9rem;
}

.login-info {
  margin-top: 0.5rem;
  text-align: center;
}

.info-text {
  color: var(--text-muted);
  font-size: 0.85rem;
  margin: 0;
}

/* Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: var(--card);
  padding: 2rem;
  border-radius: 14px;
  border: 1px solid var(--border);
  min-width: 400px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
}

.modal-content h3 {
  margin-top: 0;
  color: var(--text);
  font-weight: 600;
}

.modal-content input {
  width: 100%;
  padding: 0.85rem 1rem;
  margin-bottom: 1rem;
  border: 1px solid var(--input-border);
  border-radius: 10px;
  background: var(--input-bg);
  color: var(--text);
  font-size: 1rem;
}

.modal-content input:focus {
  outline: none;
  border-color: var(--primary);
}

.modal-actions {
  display: flex;
  gap: 1rem;
  margin-top: 1.5rem;
}

/* Gyms Page */
.gyms-page {
  width: 100%;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.page-header h2 {
  margin: 0;
  color: var(--text);
}

.gym-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
}

.form-group textarea {
  padding: 0.85rem 1rem;
  border: 1px solid var(--input-border);
  border-radius: 10px;
  background: var(--input-bg);
  color: var(--text);
  font-size: 1rem;
  font-family: inherit;
  resize: vertical;
}

.form-group textarea:focus {
  outline: none;
  border-color: var(--primary);
}

.form-group select {
  padding: 0.85rem 1rem;
  border: 1px solid var(--input-border);
  border-radius: 10px;
  background: var(--input-bg);
  color: var(--text);
  font-size: 1rem;
}

.form-group select:focus {
  outline: none;
  border-color: var(--primary);
}

.form-actions {
  display: flex;
  gap: 1rem;
  justify-content: flex-end;
  padding-top: 1rem;
  border-top: 1px solid var(--border);
}

.gyms-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 1.5rem;
}

.gym-card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 14px;
  overflow: hidden;
  transition: transform 0.3s, box-shadow 0.3s;
}

.gym-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.gym-photo {
  width: 100%;
  height: 200px;
  overflow: hidden;
  background: var(--bg);
}

.gym-photo img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.gym-card-content {
  padding: 1.25rem;
}

.gym-card-content h3 {
  margin: 0 0 0.5rem 0;
  color: var(--text);
  font-size: 1.25rem;
}

.gym-city {
  margin: 0 0 0.75rem 0;
  color: var(--text-muted);
  font-size: 0.85rem;
}

.gym-description {
  margin: 0 0 1rem 0;
  color: var(--subtext);
  font-size: 0.9rem;
  line-height: 1.5;
}

.gym-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border);
}

.gym-type {
  background: rgba(79, 156, 249, 0.15);
  color: var(--primary);
  padding: 0.35rem 0.85rem;
  border-radius: 6px;
  font-size: 0.8rem;
  font-weight: 600;
}

.gym-price {
  color: var(--primary);
  font-weight: 600;
  font-size: 1.1rem;
}

.gym-actions {
  display: flex;
  gap: 0.5rem;
}

.empty-message {
  text-align: center;
  color: var(--text-muted);
  padding: 2rem;
  font-size: 0.95rem;
}

/* Page Subtitle */
.page-subtitle {
  margin: 0.5rem 0 0 0;
  color: var(--text-muted);
  font-size: 0.9rem;
  font-weight: normal;
}

/* Filters Container */
.filters-container {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  align-items: flex-end;
}

.filters-container .form-group {
  flex: 1;
  min-width: 200px;
}

/* Form Sections */
.form-section {
  padding: 1.5rem;
  background: var(--bg);
  border-radius: 10px;
  margin-bottom: 1rem;
}

.form-section h3 {
  margin: 0 0 1rem 0;
  color: var(--text);
  font-size: 1.1rem;
  font-weight: 600;
  padding-bottom: 0.75rem;
  border-bottom: 2px solid var(--border);
}

.form-section:last-of-type {
  margin-bottom: 0;
}

/* Checkbox Group */
.checkbox-group {
  display: flex;
  align-items: center;
}

.checkbox-group label {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  cursor: pointer;
  user-select: none;
}

.checkbox-group input[type="checkbox"] {
  width: 20px;
  height: 20px;
  cursor: pointer;
  accent-color: var(--primary);
}

.checkbox-group span {
  font-weight: 500;
  color: var(--text);
}

.form-group small {
  color: var(--text-muted);
  font-size: 0.8rem;
  margin-top: 0.25rem;
}

/* Gym Card Enhancements */
.gym-photo {
  position: relative;
}

.gym-badges {
  position: absolute;
  top: 0.75rem;
  right: 0.75rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.badge-verified {
  background: var(--success);
  color: white;
  padding: 0.35rem 0.75rem;
  border-radius: 6px;
  font-size: 0.75rem;
  font-weight: 600;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.badge-featured {
  background: var(--warning);
  color: white;
  padding: 0.35rem 0.75rem;
  border-radius: 6px;
  font-size: 0.75rem;
  font-weight: 600;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.gym-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 0.75rem;
}

.gym-header h3 {
  margin: 0;
  flex: 1;
}

.gym-header .gym-city {
  margin: 0;
  white-space: nowrap;
}

.gym-details {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border);
}

.detail-item {
  display: flex;
  gap: 0.5rem;
  font-size: 0.85rem;
}

.detail-item .label {
  color: var(--text-muted);
  font-weight: 500;
  min-width: 80px;
}

.detail-item span:last-child {
  color: var(--text);
}

.gym-features {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  margin-bottom: 1rem;
  padding: 1rem;
  background: var(--bg);
  border-radius: 8px;
}

.feature-item {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.feature-item .label {
  color: var(--text-muted);
  font-size: 0.75rem;
  font-weight: 500;
  text-transform: uppercase;
}

.feature-item .value {
  color: var(--text);
  font-size: 0.9rem;
}

.gym-pricing {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
  padding: 1rem;
  background: var(--bg);
  border-radius: 8px;
}

.price-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.25rem;
}

.price-item .label {
  color: var(--text-muted);
  font-size: 0.75rem;
  font-weight: 500;
  text-transform: uppercase;
}

.price-item .price {
  color: var(--primary);
  font-size: 1.25rem;
  font-weight: 700;
}

.gym-config {
  margin-bottom: 1rem;
  padding: 0.75rem;
  background: var(--bg);
  border-radius: 8px;
}

.config-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 0.5rem;
}

.config-item .status {
  padding: 0.35rem 0.75rem;
  border-radius: 6px;
  font-size: 0.8rem;
  font-weight: 600;
}

.config-item .status.active {
  background: rgba(76, 175, 80, 0.15);
  color: var(--success);
}

.config-item .status.inactive {
  background: rgba(244, 67, 54, 0.15);
  color: var(--danger);
}

.config-details {
  color: var(--text-muted);
  font-size: 0.8rem;
}

.btn-edit,
.btn-schedule,
.btn-special-schedule {
  flex: 1;
  padding: 0.5rem 0.85rem;
  background: var(--primary);
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 0.85rem;
  font-weight: 500;
  transition: opacity 0.3s;
}

.btn-schedule {
  background: var(--success);
}

.btn-special-schedule {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.btn-edit:hover,
.btn-schedule:hover,
.btn-special-schedule:hover {
  opacity: 0.85;
}

/* Responsive */
@media (max-width: 768px) {
  .form-row {
    grid-template-columns: 1fr;
  }

  .gyms-grid {
    grid-template-columns: 1fr;
  }

  .page-header {
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }

  .page-header button {
    width: 100%;
  }

  .filters-container {
    flex-direction: column;
  }

  .filters-container .form-group {
    width: 100%;
  }
}

/* Gym Schedule Manager */
.gym-schedule-manager {
  margin-top: 1.5rem;
  padding: 1.5rem;
  background: var(--bg);
  border-radius: 10px;
}

.gym-schedule-manager h3 {
  margin: 0 0 1.5rem 0;
  color: var(--text);
  font-size: 1.2rem;
}

.schedule-table {
  background: var(--card);
  border-radius: 10px;
  overflow: hidden;
  border: 1px solid var(--border);
}

.schedule-header {
  display: grid;
  grid-template-columns: 150px 1fr 1fr 150px 180px;
  gap: 1rem;
  padding: 1rem;
  background: var(--bg);
  border-bottom: 2px solid var(--border);
  font-weight: 600;
  color: var(--text);
}

.schedule-row {
  display: grid;
  grid-template-columns: 150px 1fr 1fr 150px 180px;
  gap: 1rem;
  padding: 1rem;
  border-bottom: 1px solid var(--border);
  transition: background 0.2s;
}

.schedule-row:last-child {
  border-bottom: none;
}

.schedule-row:hover {
  background: var(--bg);
}

.schedule-row.editing {
  background: rgba(79, 156, 249, 0.05);
}

.schedule-col {
  display: flex;
  align-items: center;
}

.day-col {
  font-weight: 600;
  color: var(--text);
}

.schedule-col input[type="time"] {
  padding: 0.5rem;
  border: 1px solid var(--input-border);
  border-radius: 6px;
  background: var(--input-bg);
  color: var(--text);
  font-size: 0.9rem;
  width: 100%;
}

.schedule-col input[type="time"]:focus {
  outline: none;
  border-color: var(--primary);
}

.schedule-col input[type="time"]:disabled {
  background: var(--muted);
  cursor: not-allowed;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  user-select: none;
}

.checkbox-label input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
  accent-color: var(--primary);
}

.status-badge.closed {
  background: rgba(244, 67, 54, 0.15);
  color: var(--danger);
  padding: 0.35rem 0.75rem;
  border-radius: 6px;
  font-size: 0.8rem;
  font-weight: 600;
}

.status-badge.open {
  background: rgba(76, 175, 80, 0.15);
  color: var(--success);
  padding: 0.35rem 0.75rem;
  border-radius: 6px;
  font-size: 0.8rem;
  font-weight: 600;
}

.actions-col {
  display: flex;
  gap: 0.5rem;
}

.btn-save-sm,
.btn-cancel-sm,
.btn-edit-sm {
  padding: 0.4rem 0.75rem;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 0.8rem;
  font-weight: 500;
  transition: opacity 0.3s;
}

.btn-save-sm {
  background: var(--success);
  color: white;
}

.btn-cancel-sm {
  background: var(--muted);
  color: var(--text);
}

.btn-edit-sm {
  background: var(--primary);
  color: white;
}

.btn-save-sm:hover,
.btn-cancel-sm:hover,
.btn-edit-sm:hover {
  opacity: 0.85;
}

.btn-save-sm:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.schedule-info {
  margin-top: 1rem;
  padding: 1rem;
  background: rgba(79, 156, 249, 0.1);
  border-radius: 8px;
  border-left: 4px solid var(--primary);
}

.schedule-info p {
  margin: 0;
  color: var(--text);
  font-size: 0.9rem;
}

.loading-schedules {
  padding: 2rem;
  text-align: center;
  color: var(--text-muted);
}

/* Responsive schedules */
@media (max-width: 768px) {
  .schedule-header,
  .schedule-row {
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  .schedule-col {
    flex-direction: column;
    align-items: flex-start;
  }

  .actions-col {
    flex-direction: column;
    width: 100%;
  }

  .actions-col button {
    width: 100%;
  }
}

/* ========================================
   GYM SPECIAL SCHEDULES
   ======================================== */

.gym-special-schedule-manager {
  margin-top: 2rem;
  padding: 1.5rem;
  background: var(--bg);
  border-radius: 10px;
}

.special-schedule-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
