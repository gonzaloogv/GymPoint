  color: var(--text);
}

.user-email {
  font-size: 0.85rem;
  color: var(--text-muted);
}

.review-status {
  flex-shrink: 0;
}

.badge-approved {
  background: rgba(34, 197, 94, 0.1);
  color: var(--success);
  border: 1px solid var(--success);
}

.badge-pending {
  background: rgba(245, 158, 11, 0.1);
  color: var(--warning);
  border: 1px solid var(--warning);
}

.review-gym-info {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  margin-bottom: 1rem;
  padding: 0.75rem;
  background: var(--bg);
  border-radius: 8px;
}

.gym-name {
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--text);
}

.gym-city {
  font-size: 0.85rem;
  color: var(--text-muted);
}

.review-rating {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.review-stars {
  display: flex;
  gap: 0.25rem;
}

.star-filled,
.star-empty {
  font-size: 1.25rem;
}

.star-filled {
  color: #f59e0b;
}

.star-empty {
  color: var(--border);
}

.rating-number {
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--text-muted);
}

.review-comment {
  margin-bottom: 1rem;
  padding: 1rem;
  background: var(--bg);
  border-radius: 8px;
  border-left: 3px solid var(--primary);
}

.review-comment p {
  margin: 0;
  font-size: 0.95rem;
  line-height: 1.6;
  color: var(--text);
  font-style: italic;
}

.review-date {
  margin-bottom: 1rem;
  font-size: 0.85rem;
  color: var(--text-muted);
}

.review-actions {
  display: flex;
  gap: 0.75rem;
  padding-top: 1rem;
  border-top: 1px solid var(--border);
}

.review-actions button {
  flex: 1;
  padding: 0.6rem 1rem;
  border: none;
  border-radius: 8px;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-approve {
  background: var(--success);
  color: white;
}

.btn-approve:hover {
  opacity: 0.85;
}

.btn-reject {
  background: var(--danger);
  color: white;
}

.btn-reject:hover {
  opacity: 0.85;
}

.btn-delete {
  background: var(--muted);
  color: var(--text);
}

.btn-delete:hover {
  background: var(--danger);
  color: white;
}

.review-actions button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Responsive Reviews */
@media (max-width: 768px) {
  .reviews-stats-grid {
    grid-template-columns: 1fr;
  }

  .reviews-grid {
    grid-template-columns: 1fr;
  }

  .review-header {
    flex-direction: column;
  }

  .review-actions {
    flex-direction: column;
  }

  .rating-filters {
    justify-content: center;
  }
}

@media (max-width: 480px) {
  .reviews-page {
    padding: 0.5rem;
  }

  .review-card {
    padding: 1rem;
  }

  .stat-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
}


/* ============================================
   ROUTINE TEMPLATES STYLES
   ============================================ */

.routine-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.difficulty-tabs {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
  margin-top: 1rem;
}

.difficulty-tabs .tab {
  background: var(--card);
  border: 2px solid var(--border);
  color: var(--text);
  padding: 0.75rem 1.25rem;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 500;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.difficulty-tabs .tab:hover {
  background: var(--bg);
  transform: translateY(-2px);
}

.difficulty-tabs .tab.active {
  background: var(--primary);
  color: var(--primary-text);
  border-color: var(--primary);
}

.difficulty-tabs .count {
  background: rgba(255, 255, 255, 0.2);
  padding: 0.25rem 0.5rem;
  border-radius: 12px;
  font-size: 0.85rem;
  font-weight: 600;
}

.difficulty-tabs .tab.active .count {
  background: rgba(255, 255, 255, 0.3);
}

.templates-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
  margin-top: 1.5rem;
}

.template-card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 1.5rem;
  transition: all 0.3s ease;
}

.template-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
}

.template-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 1rem;
  margin-bottom: 1rem;
}

.template-header h3 {
  margin: 0;
  font-size: 1.25rem;
  color: var(--text);
  flex: 1;
}

.difficulty-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  padding: 0.375rem 0.75rem;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 600;
  color: white;
  white-space: nowrap;
}

.template-description {
  color: var(--text-muted);
  font-size: 0.95rem;
  margin: 0.75rem 0;
  line-height: 1.5;
}

.template-meta {
  display: flex;
  gap: 1rem;
  margin: 1rem 0;
  font-size: 0.9rem;
  color: var(--text-muted);
}

.template-actions {
  display: flex;
  gap: 0.75rem;
  margin-top: 1rem;
}

.btn-edit {
  background: var(--primary);
  color: var(--primary-text);
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 6px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  flex: 1;
}

.btn-edit:hover {
  background: #3d7dc7;
  transform: scale(1.02);
}

.btn-delete {
  background: var(--danger);
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 6px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  flex: 1;
}

.btn-delete:hover {
  background: #d32f2f;
  transform: scale(1.02);
}

.btn-delete:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

/* Exercise Section */
.exercise-section {
  border: 2px dashed var(--border);
  border-radius: 12px;
  padding: 1.5rem;
  background: var(--bg);
}

.exercise-section h3 {
  margin: 0 0 1rem 0;
  color: var(--text);
  font-size: 1.1rem;
}

.selected-exercises {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  margin-bottom: 1.5rem;
}

.exercise-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 8px;
  padding: 1rem;
  transition: all 0.2s ease;
}

.exercise-item:hover {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.exercise-order {
  background: var(--primary);
  color: var(--primary-text);
  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 0.9rem;
  flex-shrink: 0;
}

.exercise-name {
  flex: 1;
  font-weight: 500;
  color: var(--text);
}

.exercise-details {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.exercise-details label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
  color: var(--text-muted);
  font-weight: 500;
}

.exercise-details input {
  width: 60px;
  padding: 0.375rem;
  border: 1px solid var(--border);
  border-radius: 6px;
  text-align: center;
  font-weight: 600;
}

.btn-remove {
  background: var(--danger);
  color: white;
  border: none;
  padding: 0.5rem 0.75rem;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.btn-remove:hover {
  background: #d32f2f;
  transform: scale(1.05);
}

.exercise-selector {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.exercise-selector label {
  font-weight: 600;
  color: var(--text);
}

.exercise-selector select {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border);
  border-radius: 8px;
  font-size: 1rem;
  background: var(--card);
  color: var(--text);
  cursor: pointer;
}

.exercise-selector select:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(79, 156, 249, 0.1);
}

.info-message {
  background: #e3f2fd;
  border-left: 4px solid #2196f3;
  padding: 1rem;
  border-radius: 6px;
  color: #1565c0;
  font-size: 0.95rem;
  line-height: 1.5;
}

/* Responsive */
@media (max-width: 768px) {
  .templates-grid {
    grid-template-columns: 1fr;
  }

  .exercise-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .exercise-details {
    width: 100%;
    justify-content: space-between;
  }

  .difficulty-tabs {
    flex-direction: column;
  }

  .difficulty-tabs .tab {
    width: 100%;
    justify-content: space-between;
  }
}


/* ============================================
   AMENITIES SELECTOR STYLES
   ============================================ */

.amenities-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 0.75rem;
  margin-top: 0.75rem;
}

.amenity-button {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.875rem 1rem;
  background: var(--card);
  border: 2px solid var(--border);
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.2s ease;
  font-size: 0.95rem;
  font-weight: 500;
  color: var(--text);
  text-align: left;
}

.amenity-button:hover {
  background: var(--bg);
  border-color: var(--primary);
  transform: translateY(-2px);
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
}

.amenity-button.selected {
  background: var(--primary);
  border-color: var(--primary);
  color: var(--primary-text);
  font-weight: 600;
}

.amenity-button.selected:hover {
  background: #3d7dc7;
  border-color: #3d7dc7;
}

.amenity-icon {
  font-size: 1.5rem;
  flex-shrink: 0;
  line-height: 1;
}

.amenity-name {
  flex: 1;
  line-height: 1.3;
}

/* Responsive */
@media (max-width: 768px) {
  .amenities-grid {
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 0.5rem;
  }

  .amenity-button {
    padding: 0.75rem;
    font-size: 0.875rem;
    gap: 0.5rem;
  }

  .amenity-icon {
    font-size: 1.25rem;
  }
}

/* ============================================
   EXERCISES PAGE STYLES
   ============================================ */

.exercise-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.muscle-group-filter {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.muscle-group-filter label {
  font-weight: 600;
  color: var(--text);
}

.muscle-group-filter select {
  padding: 0.625rem 1rem;
  border: 1px solid var(--border);
  border-radius: 8px;
  background: var(--card);
  color: var(--text);
  font-size: 0.95rem;
  cursor: pointer;
}

.exercises-table {
  overflow-x: auto;
  margin-top: 1.5rem;
}

.exercises-table table {
  width: 100%;
  border-collapse: collapse;
  background: var(--card);
}

.exercises-table th {
  background: var(--bg);
  padding: 1rem;
  text-align: left;
  font-weight: 600;
  color: var(--text);
  border-bottom: 2px solid var(--border);
  white-space: nowrap;
}

.exercises-table td {
  padding: 1rem;
  border-bottom: 1px solid var(--border);
  vertical-align: middle;
}

.exercises-table tbody tr:hover {
  background: var(--bg);
}

.exercise-name-cell {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.video-link {
  font-size: 1.25rem;
  text-decoration: none;
  transition: transform 0.2s ease;
}

.video-link:hover {
  transform: scale(1.2);
}

.description-cell {
  max-width: 300px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.difficulty-tag {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.85rem;
  font-weight: 600;
  color: white;
}

.difficulty-tag.principiante {
  background: #22c55e;
}

.difficulty-tag.intermedio {
  background: #eab308;
}

.difficulty-tag.avanzado {
  background: #ef4444;
}

.actions-cell {
  display: flex;
  gap: 0.5rem;
  white-space: nowrap;
}

.btn-icon {
  background: transparent;
  border: none;
  font-size: 1.25rem;
  cursor: pointer;
  padding: 0.25rem 0.5rem;
  border-radius: 6px;
  transition: all 0.2s ease;
}

.btn-icon:hover {
  background: var(--bg);
  transform: scale(1.1);
}

.btn-icon-danger:hover {
  background: rgba(244, 67, 54, 0.1);
}

/* Responsive */
@media (max-width: 1024px) {
  .exercises-table {
    font-size: 0.9rem;
  }

  .exercises-table th,
  .exercises-table td {
    padding: 0.75rem;
  }

  .description-cell {
    max-width: 200px;
  }
}

@media (max-width: 768px) {
  .muscle-group-filter {
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
  }

  .muscle-group-filter select {
    width: 100%;
  }

  .exercises-table {
    font-size: 0.85rem;
  }

  .exercises-table table {
    display: block;
    overflow-x: auto;
  }

  .description-cell {
    max-width: 150px;
  }
}

